---
import { ContactForm } from '../components/contact-form';
import MainLayout from '../layouts/main-layout.astro';
---

<MainLayout 
  title="Contact Us" 
  description="Contact The Welding School Manila - Get in touch with us for course inquiries, enrollment, and information about our welding training and certification programs."
  keywords="contact welding school, welding training philippines, welding course inquiries, manila welding courses"
>
  <!-- Hero Section -->
  <section class="py-16 md:py-24 gradient-dark relative overflow-hidden text-white">
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/welding-5.jpg" 
        alt="Welding contact" 
        class="w-full h-full object-cover opacity-30 mix-blend-overlay"
      />
    </div>
    <div class="absolute inset-0 hero-gradient z-10"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-20">
      <div class="text-center animate-fadeInUp">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 gradient-text gradient-secondary">Contact Us</h1>
        <p class="text-xl max-w-3xl mx-auto text-gray-200">
          We're here to help you with any questions about our courses, certifications, or services.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information Section -->
  <section class="py-16 md:py-24 gradient-light">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <ContactForm client:load />
        </div>
        
        <!-- Contact Information -->
        <div class="glass-card p-8 rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition duration-300">
          <h2 class="text-2xl font-bold gradient-text gradient-primary mb-6">Contact Information</h2>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="h-10 w-10 gradient-primary rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium gradient-text gradient-secondary">Address</h3>
                <p class="mt-1 text-gray-600">550 Trinidad Ayala, Ermita, Manila</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="h-10 w-10 gradient-primary rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium gradient-text gradient-secondary">Phone</h3>
                <p class="mt-1 text-gray-600">0927 384 0120</p>
                <p class="text-gray-600">(02) 8354 2792</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="h-10 w-10 gradient-primary rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium gradient-text gradient-secondary">Email</h3>
                <p class="mt-1 text-gray-600">theweldingschoolmanila@gmail.com</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="h-10 w-10 gradient-primary rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium gradient-text gradient-secondary">Hours</h3>
                <p class="mt-1 text-gray-600">Monday to Saturday</p>
                <p class="text-gray-600">8:00 AM - 6:00 PM</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="h-10 w-10 gradient-primary rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium gradient-text gradient-secondary">Departments</h3>
                <p class="mt-1 text-gray-600">Training: training.twsm@gmail.com</p>
                <p class="text-gray-600">Assessment: assessment.twsm@gmail.com</p>
                <p class="text-gray-600">Tradetest: tradetest.twsm@gmail.com</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Map Section -->
  <section class="py-16 bg-gradient-to-br from-amber-500 to-orange-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8 animate-fadeInUp">
        <h2 class="text-3xl font-bold text-white mb-4">Our Location</h2>
        <p class="text-xl text-white/80 max-w-3xl mx-auto">
          Visit our training facility in Ermita, Manila.
        </p>
      </div>
      
      <div class="glass-card aspect-w-16 aspect-h-9 rounded-lg overflow-hidden shadow-lg">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3861.2224102361446!2d120.98204!3d14.581594!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397ca21c534f7d7%3A0x4a676b1d52a72caf!2s550%20Ayala%20Trinidad%2C%20Ermita%2C%20Manila%2C%20Metro%20Manila!5e0!3m2!1sen!2sph!4v1712798453647!5m2!1sen!2sph" 
          width="100%" 
          height="500" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          class="w-full h-full rounded-lg"
        ></iframe>
      </div>
      
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <a href="tel:09273840120" class="glass-card hover:bg-white/20 text-white font-bold py-3 px-8 rounded-md transition duration-300">
          Call Us
        </a>
        <a href="mailto:theweldingschoolmanila@gmail.com" class="bg-white/90 hover:bg-white text-orange-700 font-bold py-3 px-8 rounded-md shadow-lg transition duration-300">
          Email Us
        </a>
      </div>
    </div>
  </section>
</MainLayout> 